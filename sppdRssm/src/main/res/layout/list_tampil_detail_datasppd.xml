<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="#FFFFFF" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/logo_rssm3x"
        android:contentDescription="@string/todo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#513A5249" />

    <TextView
        android:id="@+id/nip_lokal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone" />

    <View
        android:id="@+id/actionbar_daftarspt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/list_item_title" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/actionbar_daftarspt"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:onClick="kembali_activity"/>

    <TextView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/actionbar_daftarspt"
        android:layout_alignTop="@+id/actionbar_daftarspt"
        android:layout_toStartOf="@+id/ImageView_Help"
        android:layout_toEndOf="@+id/btn_back"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/daftar_spt_dan_sppd"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ImageView_Help"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/btn_refresh_sppd"
        android:contentDescription="@string/todo"
        android:background="@drawable/ic_live_help_black_24dp" />

    <Button
        android:id="@+id/btn_refresh_sppd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/ic_refresh_black_24dp"
        android:onClick="refresh"
        />
    <RelativeLayout
        android:id="@+id/layout_info_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar_daftarspt"
        android:background="#806B3434"
        android:orientation="vertical"
        android:visibility="visible" >

        <ListView
            android:id="@+id/list_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >
        </ListView>
    </RelativeLayout>

    <View
        android:id="@+id/actionbar2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/layout_info_notif"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/laylistrecent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionbar2"
        android:background="#CB3F3E3E"
        android:orientation="vertical" >
        <ListView
            android:id="@+id/list_daftar_sppd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"             >
        </ListView>
    </RelativeLayout>

    <View
        android:id="@+id/grslisttengah"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/white"/>
    <View
        android:id="@+id/grslist2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/grslisttengah"
        android:background="@drawable/circle_reg_v1"/>

    <View
        android:id="@+id/grslist3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/grslisttengah"
        android:background="@drawable/circle_reg_v2"/>
</RelativeLayout>