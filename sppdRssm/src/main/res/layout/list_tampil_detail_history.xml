<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp"

        android:background="#FFFFFF" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="210dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/logo_rssm3x"
        android:contentDescription="@string/todo" />
    <TextView
        android:id="@+id/nip_lokal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="gone" />

    <View
        android:id="@+id/actionbar_history"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/list_item_title" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/actionbar_history"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:onClick="kembali_activity"/>

    <TextView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/actionbar_history"
        android:layout_alignTop="@+id/actionbar_history"
        android:layout_toStartOf="@+id/bantuan_history"
        android:layout_toEndOf="@+id/btn_back"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/history_spt_dan_sppd"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bantuan_history"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/btn_refresh_history"
        android:contentDescription="@string/todo"
        android:background="@drawable/ic_live_help_black_24dp" />

    <Button
        android:id="@+id/btn_refresh_history"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/ic_refresh_black_24dp"
        android:onClick="refresh"
        />

    <View
        android:id="@+id/actionbar_history_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/info_button5"
        android:layout_alignTop="@+id/info_button5"
        android:background="#BB3838" />

    <TextView
        android:id="@+id/info_button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar_history"
        android:gravity="center|center_vertical"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_margin="5dp"
        android:textStyle="normal|bold" />

