    <View
        android:id="@+id/actionbar_history_atas"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@+id/actionbar_history_2"
        android:background="@color/white" />
    <View
        android:id="@+id/actionbar3_history"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/actionbar_history_2"
        android:background="@color/white" />

    <View
        android:id="@+id/actionbarkiri"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/info_button5"
        android:layout_alignBottom="@+id/actionbar3_history"
        android:layout_alignParentStart="true"
        android:background="@color/white" />

    <View
        android:id="@+id/actionbarkanan"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/info_button5"
        android:layout_alignBottom="@+id/actionbar3_history"
        android:layout_alignParentEnd="true"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/laylistrecent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionbar3_history"
        android:padding="5dp"
        android:background="#CB3F3E3E"
        android:orientation="vertical" >

