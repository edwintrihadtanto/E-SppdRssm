<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

        <TextView
            android:id="@+id/ambil_nip_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hitam"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_download_lap_perj"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/bg_screen5"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgdialog1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    app:srcCompat="@drawable/ic_downloadpdf"
                    android:contentDescription="@string/todo"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/text_satu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/imgdialog1"
                    android:gravity="center"
                    android:text="@string/download_laporan_perjalanan_dinas"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textStyle="bold|normal" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_download_spt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_download_lap_perj"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/bg_screen2"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgdialog2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    app:srcCompat="@drawable/ic_downloadpdf"
                    tools:ignore="RtlSymmetry"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/text_dua"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/imgdialog2"
                    android:gravity="center"
                    android:text="@string/download_laporan_spt"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textStyle="bold|normal" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_download_sppd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_download_spt"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/bg_screen3"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgdialog3"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    app:srcCompat="@drawable/ic_downloadpdf"
                    android:contentDescription="@string/todo"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/text_tiga"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/imgdialog3"
                    android:gravity="center"
                    android:text="@string/download_laporan_sppd"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textStyle="bold|normal" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_download_rincian"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_download_sppd"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/bg_screen7"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgdialog4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    app:srcCompat="@drawable/ic_downloadpdf"
                    tools:ignore="RtlSymmetry"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/text_empat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/imgdialog4"
                    android:gravity="center"
                    android:text="@string/download_laporan_rincian_biaya"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textStyle="bold|normal" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_download_riil"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_download_rincian"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/bg_screen6"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgdialog5"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    app:srcCompat="@drawable/ic_downloadpdf"
                    android:contentDescription="@string/todo"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/text_lima"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/imgdialog5"
                    android:gravity="center"
                    android:text="@string/download_laporan_riil_biaya"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

</RelativeLayout>