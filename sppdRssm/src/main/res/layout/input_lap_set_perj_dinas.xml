<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Action Bar -->
    <View
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/list_item_title" />

    <TextView
        android:id="@+id/asa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/menu_laporan_perjalanan_dinas_e_sppd_rssm"
        android:textColor="@color/hitam"
        android:textStyle="bold" />

    <!-- FORM -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionbar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Informasi SPT -->

            <TextView
                android:id="@+id/status_laporan_petugas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informasi SPT"
                android:textStyle="bold"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_dsr_sppt_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor SPT"
                android:enabled="false" />

            <EditText
                android:id="@+id/edit_tgl_dsr_sppt_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal SPT"
                android:enabled="false" />

            <!-- Pelaksanaan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pelaksanaan"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="16dp" />

            <EditText
                android:id="@+id/edit_tgl_pelaksanaan_awal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Mulai"
                android:enabled="false" />

            <EditText
                android:id="@+id/edit_tgl_pelaksanaan_sampai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Selesai"
                android:enabled="false" />

            <EditText
                android:id="@+id/edit_lama_tgl_pelaksanaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lama Hari"
                android:enabled="false" />

            <!-- Petugas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Petugas"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="16dp" />

            <EditText
                android:id="@+id/edit_tampil_nip_spt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama / NIP Petugas"
                android:enabled="false" />

            <!-- Tujuan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tujuan Perjalanan"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="16dp" />

            <EditText
                android:id="@+id/edit_daerah_tujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Daerah Tujuan"
                android:enabled="false" />

            <EditText
                android:id="@+id/edit_ins_yg_kunjungi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Instansi yang Dikunjungi"
                android:enabled="false" />

            <EditText
                android:id="@+id/edit_acara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Acara"
                android:enabled="false" />

            <!-- Hasil -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil dan Evaluasi"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="16dp" />

            <EditText
                android:id="@+id/edit_hsl_rapat"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Hasil Rapat"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/edit_masalah"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Masalah / Temuan"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/edit_saran"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Saran / Tindakan"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/edit_lain_lain"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Lain-lain"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <!-- TTD -->
            <TextView
                android:id="@+id/nmkota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/madiun_kota"
                android:textStyle="bold"
                android:paddingTop="16dp" />

            <EditText
                android:id="@+id/edit_tgl_ttd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_browser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ttd" />

            <View
                android:id="@+id/grs_tanda_tangan"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/hitam"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/vietampil_niplagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nip_npk_petugas_laporan"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tampil_niplagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tgl_sembunyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- Button Simpan -->
    <Button
        android:id="@+id/btn_simpan_lap_set_per_dinas"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/ic_ok"
        android:contentDescription="@string/todo" />

</RelativeLayout>
