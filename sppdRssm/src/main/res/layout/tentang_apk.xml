    <View
        android:id="@+id/actionbar_tentang"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/circle" />

    <TextView
        android:id="@+id/asa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/btn_back"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/default_bold"
        android:gravity="center|center_horizontal"
        android:text="@string/tentang_aplikasi_sppd_rssm"
        android:textColor="@color/hitam"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nip_lokal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hitam"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tgl_kritik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hitam"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="2dp"
        android:background="@drawable/ic_back2"
        android:contentDescription="@string/tombol_kembali_informasi"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="kembali_activity"/>

