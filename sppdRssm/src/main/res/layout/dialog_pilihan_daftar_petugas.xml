<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


        <TextView
            android:id="@+id/ambil_nip_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hitam"
            android:visibility="gone" />


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_gotoinput_lap_perj_dinas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/bg_screen6"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img1dialog"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_assignment_black_24dp"
                    android:contentDescription="@string/todo"
                    />

                <TextView
                    android:id="@+id/text_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/img1dialog"
                    android:gravity="center"
                    android:text="@string/laporan_perjalanan_dinas"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textStyle="bold|normal" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_gotocek_spt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_gotoinput_lap_perj_dinas"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/bg_screen7"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img1dialog2"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_file_download_black_24dp"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/text_download_spt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/img1dialog2"
                    android:gravity="center"
                    android:text="@string/cek_spt_surat_perintah_tugas"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textStyle="bold|normal" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_gotocek_sppd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_gotocek_spt"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/bg_screen3"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img1dialog3"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_file_download_black_24dp"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/text_download_sppd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/img1dialog3"
                    android:gravity="center"
                    android:text="@string/cek_lembar_1_e_sppd"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textStyle="bold|normal" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_gotoinputdaftar_pengeluaran_rincian"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_gotocek_sppd"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/bg_screen2"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img1dialog4"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_playlist_add_black_24dp"
                    android:contentDescription="@string/todo"
                    />

                <TextView
                    android:id="@+id/text_rincian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/img1dialog4"
                    android:gravity="center"
                    android:text="@string/daftar_rincian_biaya_bukti"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textStyle="bold|normal" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_gotoinputdaftar_pengeluaran_riil"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_gotoinputdaftar_pengeluaran_rincian"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/bg_screen5"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img1dialog5"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_playlist_add_black_24dp"
                    android:contentDescription="@string/todo"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/text_riil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/img1dialog5"
                    android:gravity="center"
                    android:text="@string/daftar_pengeluaran_riil"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textStyle="bold|normal" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

