        <androidx.cardview.widget.CardView
            android:id="@+id/btn_posting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_gotoinputdaftar_pengeluaran_riil"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img1dialog6"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/merah_posting"
                    android:contentDescription="@string/todo"
                    />

                <TextView
                    android:id="@+id/text_posting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/img1dialog6"
                    android:gravity="center"
                    android:text="@string/posting_spt_sppd"
                    android:textColor="@color/hitam"
                    android:textSize="15sp"
                    android:textStyle="bold|normal" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

</RelativeLayout>