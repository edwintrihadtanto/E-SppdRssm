<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main" >

    <View
        android:id="@+id/actionbar_menuutamaatas"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@color/list_item_title" />

    <View
        android:id="@+id/actionbar_menuutamaatas1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/actionbar_menuutamaatas"
        android:background="@drawable/circle_viewutama" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/simrs" />

    <ImageView
        android:id="@+id/btn_refresh_utama"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:contentDescription="@string/refreshmenu"
        android:onClick="refresh" />

    <Button
        android:id="@+id/btn_ic_menusamping"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:background="@drawable/ic_menu_black_24dp"
        android:contentDescription="@string/tombol_menu_awal"
        android:onClick="menu" />

    <TextView
        android:id="@+id/token_utama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="gone"
        android:padding="5dp" />

    <RelativeLayout
        android:id="@+id/cardView_kotaknama"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/btn_ic_menusamping"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/circle_viewutama_info">

        <ImageView
            android:id="@+id/img_utama"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/icontaktau"
            android:contentDescription="@android:string/unknownName"
            />
        <!--<de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_utamax"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:clickable="false"
            android:src="@drawable/icontaktau"
            app:civ_border_color="#000000"
            app:civ_border_width="2dp"
            />-->

        <TextView
            android:id="@+id/menuutama_nippetugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_utama"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/img_utama"
            android:fontFamily="@font/default_font"
            android:gravity="center|top"
            android:textColor="@color/hitam"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/menuutama_namapetugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuutama_nippetugas"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/img_utama"
            android:fontFamily="@font/default_font"
            android:gravity="bottom|center"
            android:textColor="@color/hitam"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <View
            android:id="@+id/grsutamatlayoutatas"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/menuutama_namapetugas"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/img_utama"
            android:background="@color/hitam3" />

        <TextView
            android:id="@+id/menuutama_jabpetugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grsutamatlayoutatas"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/img_utama"
            android:fontFamily="@font/default_font"
            android:gravity="bottom|center"
            android:textColor="@color/hitam"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/menuutama_unitpetugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuutama_jabpetugas"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/img_utama"
            android:fontFamily="@font/default_font"
            android:gravity="bottom|center"
            android:textColor="@color/hitam"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <TextView
        android:id="@+id/menuutama_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/white"
        android:textStyle="normal|italic"
        android:textSize="14sp"
        android:fontFamily="serif-monospace"
        android:layout_below="@+id/cardView_kotaknama"
        android:layout_alignLeft="@+id/cardView_kotaknama"
        android:layout_alignRight="@+id/cardView_kotaknama"
        android:paddingEnd="5dp"
        tools:ignore="RtlHardcoded,RtlSymmetry,SmallSp" />

    <TextView
        android:id="@+id/jam_utama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuutama_version"
        android:fontFamily="cursive"
        android:gravity="center|center_vertical"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tgl_utama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jam_utama"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif-monospace"
        android:gravity="center|center_vertical"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tgl_utama"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

            <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </RelativeLayout>

    <View
        android:id="@+id/grsutamattengah"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/white"/>

    <View
        android:id="@+id/grsutama1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/grsutamattengah"
        android:background="@drawable/circle_reg_v1"/>

    <View
        android:id="@+id/grsutama2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/grsutamattengah"
        android:background="@drawable/circle_reg_v2"/>

    <RelativeLayout
        android:id="@+id/frame_loading_utama"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E1FFFFFF" />

        <ImageView
            android:id="@+id/gmbar_loading_utama"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/todo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:text="@string/sedang_memuat"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>
</RelativeLayout>